{
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/", "**/*.test.ts"]
} 